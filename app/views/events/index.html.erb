<% url = 'https://source.unsplash.com/1600x900/?cocktails' %>
<%= render "components/banner" %>

<h1>Les évènements</h1>

<div class="container">
  <div class="row">
    <%  @events.each do |event| %>
          <%= link_to event_path(event) do %>
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= event.photo_url %>);">
                <div class="card-category">Popular</div>
                <div class="card-description">
                  <h2><%= event.name %></h2>
                  <p>Very cool city, the best</p>
                </div>
              </div>
            </div>
          <% end %>
      <% end %>
  </div>
</div>
