<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 10%), url('https://cdn.theculturetrip.com/wp-content/uploads/2016/04/7559721396_564dd0bbb6_b.jpg');">

  <div class="banner-content">
    <h1>Les meilleurs prestations pour votre entreprise</h1>

    <%= form_tag events_path, method: :get do %>
      <div class="grid">
        <div class="first-el">
          <%= text_field_tag :query,
              params[:query],
              class: "form-banner",
              placeholder: "Ville?"
            %>
        </div>
        <div class="second-el">
          <select class="select2 form-banner" name="country">
            <option value="" disabled selected>Type de prestation</option>
            <option value="traiteurs">Traiteurs</option>
            <option value="animations">Animations</option>
            <option value="team_building">Team-Building</option>
            <option value="soirees">Soir√©es d'entreprise</option>
          </select>
        </div>
        <%= button_tag(type: "submit", class: "btn btn-primary btn-lg el") do %>
          <i class="fas fa-search"></i>
        <% end %>

      </div>
    <% end %>

  </div>
</div>



