<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cdn.theculturetrip.com/wp-content/uploads/2016/04/7559721396_564dd0bbb6_b.jpg');">

  <div class="banner-content">
    <h1>Les meilleurs évènements pour votre entreprise</h1>

    <div class="grid">
        <%= form_tag events_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Trouver un évènement"
          %>
        <% end %>
        <a class="btn btn-primary btn-lg el"><i class="fas fa-search"></i></a>
    </div>

  </div>
</div>



