<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1521017432531-fbd92d768814?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80');">
  <div class="banner-content">
    <h1>Les meilleurs évènements pour votre entreprise</h1>

    <div class="col-xs-12 col-sm-8">
      <%= form_tag events_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an event"
        %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4">
      <a class="btn btn-primary btn-lg">Trouver maintenant</a>
    </div>
  </div>
</div>
